<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cell_input_state="http://schemas.android.com/apk/res-auto">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@color/light_gray" />
            <stroke android:width="1dp" android:color="@color/gray" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true" cell_input_state:state_error_cell="true">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/poppy_red" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true" cell_input_state:state_error_cell="false">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/charcoal" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="false" cell_input_state:state_error_cell="false">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/gray" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="false" cell_input_state:state_error_cell="true">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/poppy_red" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/gray" />
        </shape>
    </item>
</selector>